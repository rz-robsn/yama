<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="robsoninc.morse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <!-- Only the morse-com application can receive the messages and registration result -->
    <permission
        android:name="robsoninc.morse.Morse.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="robsoninc.morse.Morse.permission.C2D_MESSAGE" />

    <!-- Permission request to google servers to register and receive messages -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Permission request to use the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- Declares Only C2DM servers can send messages to the app. If android:permission is not set, any other app can generate it -->
        <receiver
            android:name=".MessageReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >

            <!-- Declares only cd2m RECEIVE intents sent from a component contained in the Morse app can be received -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="robsoninc.morse.Morse" />
            </intent-filter>
        </receiver>
        <!-- Receive the registration id -->
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

            <category android:name="robsoninc.morse.Morse" />
        </intent-filter>

        <activity
            android:name=".MorseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>