<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.97"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.03"
            android:contentDescription="@string/btn_undo_desc"
            android:src="@drawable/undo" />
    </LinearLayout>

    <TextView
        android:id="@+id/morse_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52" >

        <fragment
            android:id="@+id/telegraph_fragment"
            android:name="robsoninc.morse.FragmentTelegraphMode"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <fragment
            android:id="@+id/button_fragment"
            android:name="robsoninc.morse.FragmentButtonMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />        
        
        <fragment
            android:id="@+id/touchy_fragment"
            android:name="robsoninc.morse.FragmentTouchyMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />        
        
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/footer"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="25dp"
        android:layout_weight="0.08"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/sndmsg_send_button_value" />

        <Button
            android:id="@+id/button_switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/sndmsg_switch_mode" />
    </LinearLayout>

</LinearLayout>